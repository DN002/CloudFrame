<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>cloudframe-parent</artifactId>
    <groupId>dev.cloudframe</groupId>
    <version>2.0.0</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>cloudframe-fabric</artifactId>
  <name>CloudFrame Fabric</name>
  <version>2.0.0</version>
  <description>Fabric implementation of CloudFrame</description>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.5.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>dev.cloudframe:cloudframe-common</include>
                  <include>org.xerial:sqlite-jdbc</include>
                </includes>
              </artifactSet>
              <relocations>
                <relocation>
                  <pattern>org.sqlite</pattern>
                  <shadedPattern>dev.cloudframe.fabric.libs.sqlite</shadedPattern>
                </relocation>
              </relocations>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>fabric</id>
      <url>https://maven.fabricmc.net/</url>
    </repository>
  </repositories>
  <properties>
    <fabric.api.version>0.105.0+1.21.1</fabric.api.version>
    <minecraft.version>1.21.1</minecraft.version>
    <fabric.loader.version>0.16.5</fabric.loader.version>
  </properties>
</project>
